@using Kztek.Model.Models
@using Kztek.Model.CustomModel
@using Kztek.Web.Core.Extensions
@model PageModel<ContactView>
<div class="col-xs-12">
    @Html.Raw(Html.TableFor<ContactView>
        ().Columns(column =>
        {
            column.Expression(p => p.Id).Title("Id").tdWidth("15");
            column.Expression(p => p.CustomerName).Title("CustomerName").tdWidth("15");
            //column.Expression(p => p.Description).Title("Description").tdWidth("10");
            //column.Expression(p => p.IPCustomer).Title("IPCustomer").tdWidth("10");
            column.Expression(p => p.DateCreated).Title("DateCreated").tdWidth("15");
        }).DataSource(Model.Data).ToHtmlUpdate("lpContact", "table table-bordered table-hover", Url.Action("Update/", "Contact",new { Id=string.Empty }), "", false)
    )
</div>
<!--Pagging-->
<div class="col-xs-12">
    <div id="AjaxPaging">
        @*GeneratePagingFooter*@
        @Html.GeneratePagingFooterAjax(Model.TotalPage, Model.TotalItem, Model.PageIndex, Model.PageSize, "pagination", x => Url.Action("Index", "Contact", new
        {
            page = x,
            key = ViewBag.Key,
        }))
    </div>
</div>
