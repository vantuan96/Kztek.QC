@using Kztek.Model.Models
@using Kztek.Model.CustomModel
@using Kztek.Web.Core.Extensions
@model PageModel<Customer>
<div class="col-xs-12">
	@Html.Raw(Html.TableFor<Customer>
		().Columns(column =>
		{
		column.Expression(p => p.Id).Title("Id").tdWidth("15");
		column.Expression(p => p.FullName).Title("FullName").tdWidth("20");
		//column.Expression(p => p.Email).Title("Email").tdWidth("10");
		//column.Expression(p => p.Mobile).Title("Mobile").tdWidth("10");
		//column.Expression(p => p.Phone).Title("Phone").tdWidth("10");
		//column.Expression(p => p.Address).Title("Address").tdWidth("10");
		//column.Expression(p => p.Gender).Title("Gender").tdWidth("10");
		//column.Expression(p => p.Website).Title("Website").tdWidth("10");
		//column.Expression(p => p.Avartar).Title("Avartar").tdWidth("10");
		//column.Expression(p => p.Country).Title("Country").tdWidth("10");
		//column.Expression(p => p.Description).Title("Description").tdWidth("10");
		column.Expression(p => p.DateCreated).Title("DateCreated").tdWidth("15");
		column.Expression(p => p.Active).Title("Active").tdWidth("15");
		}).DataSource(Model.Data).ToHtmlUpdate("lpCustomer", "table table-bordered table-hover", Url.Action("Update/", "Customer",new { Id=string.Empty }), "", false)
	)
</div>
<!--Pagging-->
<div class="col-xs-12">
	<div id="AjaxPaging">
		@*GeneratePagingFooter*@
		@Html.GeneratePagingFooterAjax(Model.TotalPage, Model.TotalItem, Model.PageIndex, Model.PageSize, "pagination", x => Url.Action("Index", "Customer", new
		{
			page = x,
			key = ViewBag.Key,
		}))
	</div>
</div>
