@using Kztek.Web.Core.Extensions
@using Kztek.Model.Models
@model Kztek.Model.Models.NewsView
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    //var model = new KMF.Model.CustomModel.MetaModel()
    //{
    //    MetaTitle = Model.MetaTitle,
    //    MetaDesc = Model.MetaDesc,
    //    MetaKeyword = Model.MetaKeyword
    //};
}
@section headerMeta{
    <meta name="title" content="@Model.MetaTitle">
    <meta name="description" content="@Model.MetaDesc">
    <meta name="keywords" content="@Model.MetaKeyword">

}

<!-- Breadcrumb Area Start -->
<section class="breadcrumb-area section-padding-80">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb-content">
                    <h2>Giải pháp</h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/"><i class="icon_house_alt"></i> Trang chủ</a></li>
                            <li class="breadcrumb-item active" aria-current="page">@Model.NewsCategoryName</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Area End -->
<!-- News Area Start -->
<section class="akame-news-area section-padding-0-80">
    <div class="container">
        <div class="row mx-sm-n4 akame-blog-masonary">
            @if (Model != null && Model.gridModel != null && Model.gridModel.Data.Count() > 0)
            {
                foreach (var item in Model.gridModel.Data)
                {
                    <!-- Single Blog Item -->
                    <div class="col-12 col-sm-6 col-lg-4 px-4 akame-blog-masonary-item mb-50 wow fadeInUp" data-wow-delay="200ms">
                        <!-- Single Post Area -->
                        <div class="single-post-area">
                            <div class="post-thumbnail">
                                <a href="@Url.Action("Detail", "Service", new { title = item.NameUrl, newcategory = (Model != null ? Model.NewsCategoryNameUrl : "")})"><img src="@item.CoverPath" alt=""></a>
                            </div>
                            <div class="post-content">
                                <a href="@Url.Action("Detail", "Service", new { title = item.NameUrl, newcategory = (Model != null ? Model.NewsCategoryNameUrl : "")})" class="post-title">@item.Name</a>
                                <div class="post-meta">
                                    <a href="#" class="post-date"><i class="icon_clock_alt"></i> @item.DateCreated.ToString("dd/MM/yyyy")</a>
                                    @*<a href="#" class="post-comments"><i class="icon_chat_alt"></i> 10</a>*@
                                </div>
                                <p>@item.Summary</p>
                            </div>
                        </div>
                    </div>

                }
            }



        </div>

        @*<div class="row">
                <div class="col-12 text-center">
                    <a href="#" class="btn akame-btn active mt-30">Load More</a>
                </div>
            </div>*@
    </div>
</section>

<!-- Border -->
<div class="container">
    <div class="border-top"></div>
</div>